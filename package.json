{
  "name": "bela360",
  "version": "0.1.0",
  "private": true,
  "description": "Sistema de automaÃ§Ã£o para negÃ³cios de beleza via WhatsApp",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "start": "pnpm -r start",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter api test",
    "test:web": "pnpm --filter web test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "db:generate": "pnpm --filter api prisma generate",
    "db:migrate": "pnpm --filter api prisma migrate dev",
    "db:migrate:prod": "pnpm --filter api prisma migrate deploy",
    "db:seed": "pnpm --filter api prisma db seed",
    "db:studio": "pnpm --filter api prisma studio",
    "db:reset": "pnpm --filter api prisma migrate reset",
    "docker:dev": "./scripts/dev.sh start",
    "docker:stop": "./scripts/dev.sh stop",
    "docker:logs": "./scripts/dev.sh logs"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "bmad-method": "^4.44.3",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}
