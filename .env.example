# ===========================================
# bela360 - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=bela360
POSTGRES_PASSWORD=bela360_secret_change_me
POSTGRES_DB=bela360
DATABASE_URL=postgresql://bela360:bela360_secret_change_me@localhost:5432/bela360?schema=public

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# JWT Authentication
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_key_min_32_chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Evolution API (WhatsApp)
# ===========================================
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your_evolution_api_key
EVOLUTION_INSTANCE_NAME=bela360

# ===========================================
# Application
# ===========================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ===========================================
# Next.js (Frontend)
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ===========================================
# Logging & Monitoring
# ===========================================
LOG_LEVEL=debug
SENTRY_DSN=

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
